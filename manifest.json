{
  "manifest_version": 2,

  "name": "Chrome Window Manager",
  "description": "This extension provides a way to manage two consecutive windows chrome window on the same screen real-estate",
  "version": "1.0",

  "background": {
    "scripts": [
      "js/storage.js",
      "js/settings.js",
      "js/functions.js",
      "js/events.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "css/images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Chrome Window Manager"
  },

  "permissions": [
    "tabs",
    "storage"
  ]
}
